{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "palette": {
        "accent-1": "#93A1A1",
        "path-fg": "#268BD2",
        "git-fg": "#CB4B16",
        "python-fg": "#859900",
        "session-fg": "#B58900"
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "p:session-fg",
                    "template": " {{ .UserName }}"
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "p:path-fg",
                    "template": "   {{ .Path }}"
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "p:git-fg",
                    "template": " {{ if .HEAD }} {{ .HEAD }}{{ end }}"
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "p:python-fg",
                    "template": " {{ if .Venv }}  {{ .Venv }}{{ end }}"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "p:accent-1",
                    "template": "$ "
                }
            ]
        }
    ],
    "final_space": true,
    "version": 3
}
